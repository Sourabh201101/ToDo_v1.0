@model ToDoList
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Task</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Task" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-auto">
                    <input asp-for="Task" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Duedate"  class="col-sm-4 col-form-label"></label>
                <div class="col-sm-auto">
                    <input asp-for="Duedate" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Priority"  class="col-sm-4 col-form-label"></label>
                <div class="col-sm-auto">
                    <select asp-for="Priority" asp-items="Html.GetEnumSelectList<ToDo.Models.Models.Priority>()"></select>
                </div>
            </div>
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>